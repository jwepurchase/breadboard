<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Foundation Row Properties"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured"
             sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <rowcols
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/multifield"
                            class="full-width"
                            eaem-nested=""
                            element-prefix="item-"
                            fieldDescription="Click '+' to add a new column"
                            fieldLabel="Columns">
                        <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                name="."><!-- add a path if you want another node between children -->
                            <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                    method="absolute"/>
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <width
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                                fieldDescription="Enter Width"
                                                fieldLabel="Width"
                                                name="./width"/>
                                        <mediaSize
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldDescription="Enter Media Size"
                                                fieldLabel="Media Size"
                                                name="./mediaSize">
                                            <items jcr:primaryType="cq:WidgetCollection">
                                                <large jcr:primaryType="nt:unstructured"
                                                       text="large"
                                                       value="large"/>
                                                <medium jcr:primaryType="nt:unstructured"
                                                       text="medium"
                                                       value="medium"/>
                                                <small jcr:primaryType="nt:unstructured"
                                                        text="small"
                                                        value="small"/>
                                            </items>
                                        </mediaSize>
                                        <offset
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                                fieldDescription="Enter Offset"
                                                fieldLabel="Offset"
                                                name="./offset"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </rowcols>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
